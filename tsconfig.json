{
  "compilerOptions": {
    "target": "ESNext",  // Alineado con las últimas características ECMAScript soportadas por Node.js
    "module": "ESNext",  // Asegura compatibilidad con módulos ES nativos
    "declaration": false,
    "moduleResolution": "node",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./src",
    "incremental": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
